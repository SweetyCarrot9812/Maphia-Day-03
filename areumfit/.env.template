# AreumFit Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Application Environment
# Options: dev, staging, production
AREUMFIT_ENV=dev

# API Configuration
API_BASE_URL=http://localhost:3004
API_KEY=your_secure_api_key_here
API_TIMEOUT=30000

# Database Configuration
MONGO_DB=areumfit
MONGO_CONNECTION_STRING=mongodb://localhost:27017

# AI Model Configuration  
OPENAI_MODEL=gpt-5-standard
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_chars
JWT_AUD=areumfit-app
JWT_ISSUER=areumfit-api
JWT_EXPIRY=3600

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your_project.appspot.com

# Google Sign-In Client IDs (for mobile without google-services files)
# ANDROID uses the Web client ID here
GOOGLE_WEB_CLIENT_ID=your_web_client_id_from_firebase
# iOS client ID (ends with .apps.googleusercontent.com)
GOOGLE_IOS_CLIENT_ID=your_ios_client_id_from_firebase

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_LEVEL=info
MAX_LOG_FILES=10
MAX_LOG_SIZE_MB=50

# Feature Flags
FEATURE_AI_COACH_ENABLED=true
FEATURE_SOCIAL_SHARING_ENABLED=false
FEATURE_PREMIUM_FEATURES_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true

# External Services
ANALYTICS_SERVICE_URL=https://analytics.example.com
PUSH_NOTIFICATION_SERVICE_KEY=your_push_service_key_here
IMAGE_UPLOAD_SERVICE_URL=https://imageupload.example.com

# Development Only Settings
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=true
ENABLE_TEST_ROUTES=true

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/areumfit.log
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600
ENABLE_QUERY_CACHE=true

# Notification Configuration
EMAIL_SERVICE_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=60000

# Rate Limiting
GLOBAL_RATE_LIMIT=1000
USER_RATE_LIMIT=100
API_RATE_LIMIT=500

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Monitoring & Alerting
SENTRY_DSN=your_sentry_dsn_here
ALERT_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/your_webhook_url

# Data Retention
USER_DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30

# Third-party Integrations
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_APP_ID=your_facebook_app_id
APPLE_SIGN_IN_SERVICE_ID=your_apple_service_id

# Advanced Security
ENABLE_2FA=false
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
KEEP_ALIVE_TIMEOUT_MS=5000
BODY_SIZE_LIMIT_MB=50

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_TOOLBAR=true
