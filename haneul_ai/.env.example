# Haneul AI Agent Configuration

# AI APIs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google APIs (Gmail & Calendar)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=C:\Users\YourName\Documents\ObsidianVault
OBSIDIAN_INBOX_FOLDER=00-Inbox
OBSIDIAN_TODO_FOLDER=01-Todo
OBSIDIAN_COMPLETED_FOLDER=02-Completed

# Email Configuration
EMAIL_ADDRESS=your_email@gmail.com
NOTIFICATION_TIME=09:00  # 24-hour format
NOTIFICATION_FREQUENCY=daily  # daily, twice, weekly

# Database
DATABASE_URL=sqlite:///./haneul_ai.db

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
PRIORITY_THRESHOLD=5  # Minimum priority score for notifications