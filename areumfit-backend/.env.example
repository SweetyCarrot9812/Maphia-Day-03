# AreumFit Backend Configuration

# MongoDB Configuration (for production use MongoDB Atlas)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/areumfit
DATABASE_NAME=areumfit

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Google OAuth Configuration (for Firebase Auth replacement)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email Configuration
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48

# RAG Service Configuration (your personal knowledge base)
RAG_SERVICE_URL=http://localhost:8001
RAG_SIMILARITY_THRESHOLD=0.7

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://your-vercel-app.vercel.app"]
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO

# AI Coach Configuration
AI_COACH_SYSTEM_PROMPT=당신은 전문 헬스 트레이너이자 크로스핏 코치입니다...